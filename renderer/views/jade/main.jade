div#main-block(ng-cloak)
  .row(style="position:absolute;top:0;width:100%;")
    .col-md-12
      openlayers(ol-center="center" ng-if="weatherLoaded")

  .row(ng-if="weatherLoaded")
    .col-md-12
      .row
        .col-md-12
          | {{ weather.name }},{{ weather.sys.country }} ({{ weather.coord.lat }}, {{ weather.coord.lon }})
          | {{ weather.weather[0].main }}
          br
          | {{ weather.weather[0].description }}
          | {{ weather.clouds.all }} %
          | {{ weather.main.temp }}℃
          br
          | {{ weather.main.temp_min }}℃
          br
          | {{ weather.main.temp_max }}℃
          | {{ weather.main.humidity }}%
          | {{ weather.main.pressure | number }} hPa
          | {{ weather.wind.deg }} °
          | {{ weather.wind.speed }} m/s
          | {{ weather.dt*1000 | date:'yyyy-MM-dd HH:mm:ss' }}
    
