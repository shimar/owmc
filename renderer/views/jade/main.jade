div#main-block(ng-cloak)
  #map.row
    openlayers(ol-center="center" height="600px" ng-if="weatherLoaded")

  #weather-detail(ng-if="weatherLoaded")
    .row
      .col-md-12
        h1 {{ weather.name }},{{ weather.sys.country }}
          small ({{ weather.coord.lat }}, {{ weather.coord.lon }})

    .row
      .col-md-12
        | {{ weather.weather[0].main }}
        | {{ weather.weather[0].description }}
        | {{ weather.clouds.all }} %

    .row
      .col-md-12
        | {{ weather.main.temp }}℃
        | {{ weather.main.temp_min }}℃
        | {{ weather.main.temp_max }}℃

    .row
      .col-md-12
        | {{ weather.main.humidity }}%
        | {{ weather.main.pressure | number }} hPa

    .row
      .col-md-12
        | {{ weather.wind.deg }} °
        | {{ weather.wind.speed }} m/s

    .row
      .col-md-12
        | {{ weather.dt*1000 | date:'yyyy-MM-dd HH:mm:ss' }}

